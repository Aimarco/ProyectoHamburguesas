<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DatosCliente"
    android:background="#B8E2EF"
    android:transitionGroup="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textIsSelectable="true"
        android:text="@string/lblinicio" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtnombre"
        android:hint="Nombre"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:maxLength="9"
        android:id="@+id/edttlf"
        android:hint="Teléfono"
        android:layout_below="@+id/edtdireccion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edtdireccion"
        android:layout_alignEnd="@+id/edtdireccion" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/btnsalir"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp"
        style="@android:style/Holo.Light.SegmentedButton"
        android:backgroundTint="#f83d3d" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguir"
        android:id="@+id/btnseguir"
        android:layout_alignBottom="@+id/btnsalir"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        style="@android:style/Holo.Light.SegmentedButton"
        android:backgroundTint="#14f72e" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/hamburguesaini"
        android:layout_below="@+id/textView"
        android:layout_toLeftOf="@+id/btnseguir"
        android:layout_toStartOf="@+id/btnseguir" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbinfo"
        android:src="@drawable/info"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtdireccion"
        android:layout_below="@+id/edtnombre"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edtnombre"
        android:layout_alignEnd="@+id/edtnombre"
        android:hint="Dirección"
        android:lines="1"
        android:singleLine="true" />

    <Button
        style="@android:style/Holo.Light.SegmentedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buscacli"
        android:id="@+id/btnbuscarcli"
        android:backgroundTint="#14fcf4"
        android:layout_alignTop="@+id/edtnombre"
        android:layout_toRightOf="@+id/imgbinfo"
        android:layout_toEndOf="@+id/imgbinfo" />

</RelativeLayout>
